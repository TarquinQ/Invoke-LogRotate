<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<LogRotate>
    <GlobalPrefs>
        <LogFilePath></LogFilePath>
        <Verbose>True</Verbose>
        <Include>.\Sample.Include\*.config</Include>
    </GlobalPrefs>
    <RotatePath>
        <Name>SampleRotation</Name>
        <ShortName>Sample</ShortName>
        <Description>This is the sample rotation, showing many available options</Description>

        <Path>c:\Temp\LogRotate\Sample</Path>
        <MatchFilenames>*.sample</MatchFilenames>

        <DeleteOlderThan>1m</DeleteOlderThan>
        <RotationSize>1M</RotationSize>
        <RotationCount>5</RotationCount>
        <RotationExtension>Date</RotationExtension>

        <PreExec>cmd /c "echo 1"</PreExec>
        <PreExec>cmd /c "echo 2"</PreExec>
        <PreServiceStop>BITS</PreServiceStop>
        <PreServiceRestart>BITS</PreServiceRestart>

        <PostExec>cmd /c "echo 1"</PostExec>
        <PostExec>cmd /c "echo 2"</PostExec>
        <PostServiceStart>BITS</PostServiceStart>
    </RotatePath>
    <RotatePath>
        <!--  This is the sample rotation, showing the default settings for a job  -->

